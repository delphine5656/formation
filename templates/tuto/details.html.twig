{% extends 'base.html.twig' %}

{% block title %}{{ tuto.name }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">{{ tuto.name }}</h1>
                    <img src="/uploads/{{ tuto.image }}" style="width: 100%;margin-top: 20px;margin-bottom:20px;"/>
                    <p class="lead text-body-secondary">{{ tuto.description|raw }}</p>
                        <a href="{{ tuto.link }}" target="_blank" class="btn btn-primary my-2">Acheter le Tutos</a>
                        <a href="#" class="btn btn-secondary my-2">En savoir plus !</a>
                    </p>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
